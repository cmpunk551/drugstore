<div class="container">
<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="form-group">
      <%= f.label :email, class: "bmd-label-floating" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "exampleFormControlInput1" %>
      <span class="bmd-help">name@example.com</span>
    </div>

  <div class="form-group">
    <%= f.label :ФИО, class: "bmd-label-floating" %>
    <%= f.text_field :fio,autocomplete: "fio", class: "form-control", :required => true %>
    <span class="bmd-help"></span>
  </div>

  <div class="form-group">
    <%= f.label :Адрес, class: "bmd-label-floating" %>
    <%= f.text_field :address,autocomplete: "address", class: "form-control", :required => true %>
    <span class="bmd-help"></span>
  </div> 

  <div class="form-group">
    <%= f.label :Телефон, class: "bmd-label-floating" %>
    <%= f.text_field :telephone,autocomplete: "telephone", class: "form-control", :required => true %>
    <span class="bmd-help"></span>
  </div>

  <div class="form-group">
    <%= f.label :Пароль, class: "bmd-label-floating" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", :required => true %>
    <span class="bmd-help">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> символов минимум)</em>
      <% end %>
    </span>
  </div>

  <div class="form-group">
    <%= f.label :Подтверждение_пароля, class: "bmd-label-floating" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", :required => true %>
    <span class="bmd-help"></span>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: "btn btn-raised btn-success" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

</div>